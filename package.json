{
  "name": "foundry-module-ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "version": "1.0.1",
  "description": "A template project for FoundryVTT modules using Typescript",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "watch": "tsc && vite build --watch",
    "update-module": "bash ./scripts/update-module-json.sh",
    "package": "7z a vampire-20-exp-counter.zip ./dist/",
    "publish": "npm run update-module && npm run build && npm run zip-dist"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^12.331.3-beta",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.54.8",
    "typescript": "5.4",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "latest": "^0.2.0"
  }
}
